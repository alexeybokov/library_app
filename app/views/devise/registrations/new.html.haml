.wrapper.fadeIn
  #formContent
    / Icon
    .fadeIn.first
      = image_tag('avatar.png', class: 'icon')
    / Sign up Form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .field#nickname.fadeIn.second
        = f.text_field :nickname, autofocus: true, placeholder: :'Nickname', autocomplete: "Nickname"
      .field#email.fadeIn.third
        = f.email_field :email, autofocus: true, placeholder: :'Email', autocomplete: "Email"
      .field#password.fadeIn.fourth
        - if @minimum_password_length
          = f.password_field :password, placeholder: :"Password (#{@minimum_password_length} characters minimum)", autocomplete: "New-password"
      .field#password_confirmation.fadeIn.fourth
        = f.password_field :password_confirmation, placeholder: :'Password  confirmation', autocomplete: "New-password"
      .actions.fadeIn.sixth
        = f.submit 'Sign up'
    #formFooter.underlineHover
      =render "devise/shared/links"
