.wrapper.fadeInDown
  #formContent
    / Icon
    .fadeIn.first
      = image_tag('avatar.png', class: 'icon')
    / Login Form
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field#email.fadeIn.third
        = f.email_field :email, autofocus: true, placeholder: :'Email',autocomplete: "email"
      .field#password.fadeIn.fourth
        = f.password_field :password, placeholder: :'Password', autocomplete: "current-password"
      - if devise_mapping.rememberable?
        .field.fadeIn.fifth
          = f.check_box :remember_me
          = f.label :remember_me
      .actions.fadeIn.sixth
        = f.submit "Log in"
    #formFooter.underlineHover
      =render "devise/shared/links"
