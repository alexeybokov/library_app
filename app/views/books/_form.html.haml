.new_book_form
  = form_for @book, html: { multipart: true } do |f|
    .field
      = f.label :title
      = f.text_field :title
    .field
      = f.label :author
      = f.text_field :author
    .field
      = f.label :description
      = f.text_field :description
    .field
      = f.label :cover
      = f.file_field :cover
