
#bookModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %h5#exampleModalLabel.modal-title Create a new Book
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
      .modal-body
        .create_errors
        = form_for Book.new, remote: true do |f|
          .field
            = f.label :title
            = f.text_field :title, placeholder: 'Book Title'
          .field
            = f.label :author
            = f.text_field :author, placeholder: 'Book Author'
          .field
            = f.label :description
            = f.text_field :description, placeholder: 'Book Description'
          .field
            = f.label :cover
            = f.file_field :cover
          = f.submit 'Create new Book', class: 'btn btn-secondary'

